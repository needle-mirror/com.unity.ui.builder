.unity-builder-library {
    flex-grow: 1;
}

.unity-builder-library__tree-view {
    flex-grow: 1;
}

.unity-builder-library__tree-item {
    flex-direction: row;
    flex-grow: 1;
    flex-shrink: 0;
    flex-basis: 0;
    --builder-style: default;
}

.unity-list-view:focus > .unity-list-view__item--selected .unity-builder-library__tree-item {
    --builder-style: highlighted;
}

.unity-builder-library__tree-item-icon {
    width: 16px;
    height: 16px;
    margin-top: 1px;
    margin-right: 2px;
    background-image: none;
}

.unity-builder-library__tree-item-edit-button {
    background-color: initial;
    border-width: 0;
    width: 16px;
    height: 16px;
    margin-right: 5px;
}

.unity-builder-library__tree-item-label {
    -unity-text-align: middle-left;
    margin-right: 10px;
}

.unity-builder-library__tree-item-with-edit-button:hover .unity-builder-library__tree-item-edit-button {
    display: flex;
}

.unity-builder-library__tree-item-with-edit-button:hover .unity-builder-library__tree-item-label {
    flex-grow: 1;
}

.unity-builder-library__controls-category-foldout > .unity-foldout__content {
    justify-content: space-around;
    flex-wrap: wrap;
    flex-direction: row;
    padding-top: 2px;
    margin-right: 5px;
    margin-left: 5px;
}

.unity-builder-library__controls-category-foldout > .unity-foldout__header > .unity-toggle {
    padding-left: 6px;
    padding-right: 2px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    margin: 0;
}

.unity-builder-library__controls-category-foldout > .unity-foldout__header > .unity-toggle .unity-label {
    margin-bottom: 2px;
}

.unity-builder-library__controls-category-foldout > PersistedFoldout > .unity-foldout__header > .unity-toggle {
    margin-left: 2px;
}

.unity-builder-library__header-button-strip {
    border-bottom-width: 1px;
    margin-left: 0;
    margin-right: 0;
    margin-bottom: 0;
}

.unity-builder-library__header-button-strip > ButtonStrip {
    justify-content: center;
    margin-top: 4px;
    margin-bottom: 4px;
}

.unity-builder-library__content {
    flex-grow: 1;
}

.unity-builder-library__plain-view {
    flex-grow: 1;
    flex-direction: column;
}

.plain-view__content {
    flex-direction: column;
    flex-wrap: wrap;
}
