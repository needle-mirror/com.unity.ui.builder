<UXML xmlns="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xmlns:uib="Unity.UI.Builder">
    <!-- Position -->
    <uib:BuilderStyleRow binding-path="position">
        <uie:EnumField label="Position" tooltip="position" />
    </uib:BuilderStyleRow>

    <!-- Left -->
    <uib:BuilderStyleRow binding-path="left">
        <uib:DimensionStyleField label="Left" tooltip="left" />
    </uib:BuilderStyleRow>

    <!-- Top -->
    <uib:BuilderStyleRow binding-path="top">
        <uib:DimensionStyleField label="Top" tooltip="top" />
    </uib:BuilderStyleRow>

    <!-- Right -->
    <uib:BuilderStyleRow binding-path="right">
        <uib:DimensionStyleField label="Right" tooltip="right" />
    </uib:BuilderStyleRow>

    <!-- Bottom -->
    <uib:BuilderStyleRow binding-path="bottom">
        <uib:DimensionStyleField label="Bottom" tooltip="bottom" />
    </uib:BuilderStyleRow>
</UXML>