<UXML xmlns="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xmlns:uib="Unity.UI.Builder">
    <!-- Background Color -->
    <uib:BuilderStyleRow binding-path="background-color">
        <uie:ColorField label="Color" tooltip="background-color" />
    </uib:BuilderStyleRow>

    <!-- Background Image -->
    <uib:BuilderStyleRow binding-path="background-image">
        <uie:ObjectField label="Image" tooltip="background-image" />
    </uib:BuilderStyleRow>

    <!-- Unity Background Image Tint Color -->
    <uib:BuilderStyleRow binding-path="-unity-background-image-tint-color">
        <uie:ColorField label="Image Tint" tooltip="-unity-background-image-tint-color" />
    </uib:BuilderStyleRow>

    <!-- Unity Background Scale Mode -->
    <uib:BuilderStyleRow binding-path="-unity-background-scale-mode">
        <uib:ToggleButtonStrip class="unity-builder-inspector_background-scale-mode-field" label="Scale Mode" tooltip="-unity-background-scale-mode" />
    </uib:BuilderStyleRow>

    <!-- Unity Slice -->
    <uib:BuilderStyleRow name="inspector-style-section-foldout-unity-slice">
        <uib:FoldoutNumberField
            text="Slice"
            tooltip="-unity-slice"
            binding-paths="-unity-slice-left -unity-slice-top -unity-slice-right -unity-slice-bottom"
            view-data-key="builder-inspector-style-section-foldout-unity-slice"
            class="unity-sub-foldout"
            value="false">

            <!-- Unity Slice Left -->
            <uib:BuilderStyleRow binding-path="-unity-slice-left">
                <uib:IntegerStyleField label="Left" tooltip="-unity-slice-left" />
            </uib:BuilderStyleRow>

            <!-- Unity Slice Top -->
            <uib:BuilderStyleRow binding-path="-unity-slice-top">
                <uib:IntegerStyleField label="Top" tooltip="-unity-slice-top" />
            </uib:BuilderStyleRow>

            <!-- Unity Slice Right -->
            <uib:BuilderStyleRow binding-path="-unity-slice-right">
                <uib:IntegerStyleField label="Right" tooltip="-unity-slice-right" />
            </uib:BuilderStyleRow>

            <!-- Unity Slice Bottom -->
            <uib:BuilderStyleRow binding-path="-unity-slice-bottom">
                <uib:IntegerStyleField label="Bottom" tooltip="-unity-slice-bottom" />
            </uib:BuilderStyleRow>
        </uib:FoldoutNumberField>
    </uib:BuilderStyleRow>
</UXML>