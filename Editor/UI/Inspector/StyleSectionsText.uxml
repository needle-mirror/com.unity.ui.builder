<UXML xmlns="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xmlns:uib="Unity.UI.Builder">
    <!-- Unity Font -->
    <uib:BuilderStyleRow binding-path="-unity-font">
        <uie:ObjectField label="Font" tooltip="-unity-font" />
    </uib:BuilderStyleRow>

    <!-- Unity Font Style and Weight -->
    <uib:BuilderStyleRow binding-path="-unity-font-style">
        <uib:FontStyleStrip class="unity-builder-inspector_font-style-field" label="Font Style" tooltip="-unity-font-style" />
    </uib:BuilderStyleRow>

    <!-- Font Size -->
    <uib:BuilderStyleRow binding-path="font-size">
        <uib:DimensionStyleField label="Size" tooltip="font-size" />
    </uib:BuilderStyleRow>

    <!-- Color -->
    <uib:BuilderStyleRow binding-path="color">
        <uie:ColorField label="Color" tooltip="color" />
    </uib:BuilderStyleRow>

    <!-- Unity Text Align -->
    <uib:BuilderStyleRow binding-path="-unity-text-align">
        <uib:TextAlignStrip class="unity-builder-inspector_text-align-field" label="Align" tooltip="-unity-text-align" />
    </uib:BuilderStyleRow>

    <!-- White Space -->
    <uib:BuilderStyleRow binding-path="white-space">
        <uib:ToggleButtonStrip class="unity-builder-inspector_white-space-field" label="Wrap" tooltip="white-space" />
    </uib:BuilderStyleRow>
</UXML>