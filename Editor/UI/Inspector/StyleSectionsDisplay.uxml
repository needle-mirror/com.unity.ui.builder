<UXML xmlns="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xmlns:uib="Unity.UI.Builder">
    <!-- Opacity -->
    <uib:BuilderStyleRow binding-path="opacity">
        <uib:PercentSlider label="Opacity" tooltip="opacity" />
    </uib:BuilderStyleRow>

    <!-- Display -->
    <uib:BuilderStyleRow binding-path="display">
        <uib:ToggleButtonStrip class="unity-builder-inspector_display-field" label="Display" tooltip="display" />
    </uib:BuilderStyleRow>

    <!-- Visibility -->
    <uib:BuilderStyleRow binding-path="visibility">
        <uib:ToggleButtonStrip class="unity-builder-inspector_visibility-field" label="Visibility" tooltip="visibility" />
    </uib:BuilderStyleRow>

    <!-- Overflow -->
    <uib:BuilderStyleRow binding-path="overflow">
        <uib:ToggleButtonStrip class="unity-builder-inspector_overflow-field" label="Overflow" tooltip="overflow" />
    </uib:BuilderStyleRow>
</UXML>
