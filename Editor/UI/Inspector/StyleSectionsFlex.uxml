<UXML xmlns="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xmlns:uib="Unity.UI.Builder">
    <!-- Flex Basis -->
    <uib:BuilderStyleRow binding-path="flex-basis">
        <uib:DimensionStyleField label="Basis" tooltip="flex-basis" />
    </uib:BuilderStyleRow>

    <!-- Flex -->
    <uib:BuilderStyleRow class="unity-builder-double-field-row">
        <Label class="unity-builder-double-field-label" />

        <!-- Flex Shrink -->
        <uib:NumericStyleField label="Shrink" tooltip="flex-shrink" binding-path="flex-shrink" class="unity-builder-double-field" />

        <!-- Flex Grow -->
        <uib:NumericStyleField label="Grow" tooltip="flex-grow" binding-path="flex-grow" class="unity-builder-double-field" />
    </uib:BuilderStyleRow>

    <!-- Flex Direction -->
    <uib:BuilderStyleRow binding-path="flex-direction">
        <uib:ToggleButtonStrip class="unity-builder-inspector_flex-direction-field" label="Direction" tooltip="flex-direction" />
    </uib:BuilderStyleRow>

    <!-- Flex Wrap -->
    <uib:BuilderStyleRow binding-path="flex-wrap">
        <uib:ToggleButtonStrip class="unity-builder-inspector_flex-wrap-field" label="Wrap" tooltip="flex-wrap" />
    </uib:BuilderStyleRow>
</UXML>
