<UXML xmlns="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xmlns:uib="Unity.UI.Builder">
    <!-- Border Width -->
    <uib:BuilderStyleRow name="inspector-style-section-foldout-border-color">
        <uib:FoldoutColorField
            text="Color"
            tooltip="border-color"
            binding-paths="border-left-color border-right-color border-top-color border-bottom-color"
            view-data-key="builder-inspector-style-section-foldout-border-color"
            class="unity-sub-foldout"
            value="false">

            <!-- Border Left Color -->
            <uib:BuilderStyleRow binding-path="border-left-color">
                <uie:ColorField label="Left" tooltip="border-left-color" />
            </uib:BuilderStyleRow>

            <!-- Border Right Color -->
            <uib:BuilderStyleRow binding-path="border-right-color">
                <uie:ColorField label="Right" tooltip="border-right-color" />
            </uib:BuilderStyleRow>

            <!-- Border Top Color -->
            <uib:BuilderStyleRow binding-path="border-top-color">
                <uie:ColorField label="Top" tooltip="border-top-color" />
            </uib:BuilderStyleRow>

            <!-- Border Bottom Color -->
            <uib:BuilderStyleRow binding-path="border-bottom-color">
                <uie:ColorField label="Bottom" tooltip="border-bottom-color" />
            </uib:BuilderStyleRow>
        </uib:FoldoutColorField>
    </uib:BuilderStyleRow>

    <!-- Border Width -->
    <uib:BuilderStyleRow name="inspector-style-section-foldout-border-width">
        <uib:FoldoutNumberField
            text="Width"
            tooltip="border-width"
            binding-paths="border-left-width border-right-width border-top-width border-bottom-width"
            view-data-key="builder-inspector-style-section-foldout-border-width"
            class="unity-sub-foldout"
            value="false">

            <!-- Border Left Width -->
            <uib:BuilderStyleRow binding-path="border-left-width">
                <uib:DimensionStyleField label="Left" tooltip="border-left-width" />
            </uib:BuilderStyleRow>

            <!-- Border Right Width -->
            <uib:BuilderStyleRow binding-path="border-right-width">
                <uib:DimensionStyleField label="Right" tooltip="border-right-width" />
            </uib:BuilderStyleRow>

            <!-- Border Top Width -->
            <uib:BuilderStyleRow binding-path="border-top-width">
                <uib:DimensionStyleField label="Top" tooltip="border-top-width" />
            </uib:BuilderStyleRow>

            <!-- Border Bottom Width -->
            <uib:BuilderStyleRow binding-path="border-bottom-width">
                <uib:DimensionStyleField label="Bottom" tooltip="border-bottom-width" />
            </uib:BuilderStyleRow>
        </uib:FoldoutNumberField>
    </uib:BuilderStyleRow>

    <!-- Border Radius -->
    <uib:BuilderStyleRow name="inspector-style-section-foldout-border-radius">
        <uib:FoldoutNumberField
            text="Radius"
            tooltip="border-radius"
            binding-paths="border-top-left-radius border-bottom-left-radius border-top-right-radius border-bottom-right-radius"
            view-data-key="builder-inspector-style-section-foldout-border-radius"
            class="unity-sub-foldout"
            value="false">

            <!-- Border Top-Left Radius -->
            <uib:BuilderStyleRow binding-path="border-top-left-radius">
                <uib:DimensionStyleField label="Top-Left" tooltip="border-top-left-radius" />
            </uib:BuilderStyleRow>

            <!-- Border Bottom-Left Radius -->
            <uib:BuilderStyleRow binding-path="border-bottom-left-radius">
                <uib:DimensionStyleField label="Bottom-Left" tooltip="border-bottom-left-radius" />
            </uib:BuilderStyleRow>

            <!-- Border Top-Right Radius -->
            <uib:BuilderStyleRow binding-path="border-top-right-radius">
                <uib:DimensionStyleField label="Top-Right" tooltip="border-top-right-radius" />
            </uib:BuilderStyleRow>

            <!-- Border Bottom-Right Radius -->
            <uib:BuilderStyleRow binding-path="border-bottom-right-radius">
                <uib:DimensionStyleField label="Bottom-Right" tooltip="border-bottom-right-radius" />
            </uib:BuilderStyleRow>
        </uib:FoldoutNumberField>
    </uib:BuilderStyleRow>
</UXML>
