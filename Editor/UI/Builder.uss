/*****************************************************************************/
/* Global                                                                      */
/*****************************************************************************/

.unity-builder-hidden {
    display: none;
}

/* TODO: Remove when this is fixed in trunk. */
.unity-base-slider__dragger {
    border-radius: 6px;
}

/*****************************************************************************/
/* Pane                                                                      */
/*****************************************************************************/

.unity-builder__pane {
    overflow: hidden;
    flex-shrink: 0;
}

.unity-builder-pane__header {
    padding: 2px;
    border-top-width: 1px;
    flex-direction: row;
}

.unity-builder-pane__sub-title-prefix {
    opacity: 0.5;
    padding: 0;
}

.unity-builder-pane__sub-title {
    opacity: 0.5;
}

.unity-builder-pane__toolbar {
    flex-grow: 1;
    align-items: flex-end;
}

.unity-builder-pane__splitter-obstructed .unity-builder-pane__header {
    border-top-width: 2px;
}

.unity-builder-pane__content-container {
    flex-grow: 1;
    overflow: hidden;
}

/*****************************************************************************/
/* Split View                                                                */
/*****************************************************************************/

.unity-builder__split-view {
    flex-grow: 1;
}

.unity-builder__split-view--vertical {
    flex-direction: column;
}

.unity-builder__split-view--horizontal {
    flex-direction: row;
}

/*****************************************************************************/
/* Explorer                                                                  */
/*****************************************************************************/

.unity-builder-explorer {
    flex-grow: 1;
}

.unity-builder-explorer--hidden Label {
    opacity: 0.5;
}

.unity-builder-explorer--hidden  .unity-builder-explorer-tree-item-icon {
    opacity: 0.5;
}

.unity-builder-explorer-tree-item-template-path {
    opacity: 0.5;
}

.unity-builder-explorer__header {
    border-top-width: 1px;
    border-bottom-width: 1px;
}

.unity-builder-explorer-tree-item-label-cont {
    flex-direction: row;
}

.unity-builder-explorer-tree-item-label {
    margin-top: 3px;
    padding-top: 0;
    padding-left: 1px;
    padding-right: 1px;
    margin-right: 4px;
    margin-left: 1px;
}

.unity-builder-explorer-tree-item-icon {
    width: 16px;
    height: 16px;
    margin-top: 2px;
}

.unity-builder-explorer__reorder-zone {
    position: absolute;
    left: 0;
    right: 0;
    height: 5px;
}

.unity-builder-explorer__reorder-zone-above {
    top: 0;
}

.unity-builder-explorer__reorder-zone-below {
    bottom: 0;
}

.unity-builder-explorer__reorder-hover-bar {
    position: absolute;
    left: 0;
    right: 0;
    height: 2px;
}

.unity-builder-explorer__reorder-hover-bar-above {
    top: -1px;
}

.unity-builder-explorer__reorder-hover-bar-below {
    bottom: -1px;
}

.unity-builder-explorer__content-container {
    flex-direction: row;
    flex-grow: 1;
}

BuilderExplorerItem {
    --builder-style: default;
}

.unity-list-view:focus > .unity-list-view__item--selected BuilderExplorerItem {
    --builder-style: highlighted;
}

.unity-builder__toolbar-setting-menu {
    background-color: initial;
    border-width: 0;
    padding-top: 2px;
    padding-bottom: 2px;
    -unity-slice-top: 0;
    -unity-slice-right: 0;
}

.unity-builder__toolbar-setting-menu > .unity-toolbar-menu__arrow {
    background-image: none;
}

.unity-builder-explorer__rename-textfield {
    padding-top: 2px;
    padding-bottom: 0;
    margin-top: 0;
    margin-bottom: 2px;
}

.unity-builder-explorer__rename-textfield > .unity-text-input {
    padding-bottom: 3px;
}

.unity-builder-explorer__new-selector-item {
    flex-direction: row;
}

.unity-builder-explorer__new-selector-field-container {
    flex-grow: 1;
}

.unity-builder-explorer__new-selector-field {
    padding-top: 0;
    padding-bottom: 0;
    margin-top: 0;
    margin-bottom: 0;
}

.unity-builder-stylesheets__toolbar-add-uss-menu > .unity-text-element {
    padding-top: 0;
    margin-top: -4px;
    padding-left: 0;
    font-size: 26px;
}

.unity-builder-stylesheets__toolbar-add-new-selector {
    padding-top: 3px;
    padding-bottom: 0;
    margin-top: 0;
    margin-bottom: 1px;
}

.unity-builder-stylesheets-pane .unity-builder-explorer-tree-item-label {
    padding-left: 0;
    padding-right: 0;
    margin-right: 0;
    margin-left: 0;
}

.unity-builder-stylesheets-pane--active-stylesheet {
    -unity-font-style: bold;
}

/*****************************************************************************/
/* Notifications */
/*****************************************************************************/

.unity-builder-notifications-container {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
}

.unity-builder-notification-entry {
    flex-direction: row;
    align-items: center;
    padding: 2px;
    margin: 2px;
    border-width: 1px;
    border-radius: 4px;
}

.unity-builder-notification-entry__icon {
    width: 16px;
    height: 16px;
    margin: 2px;
}

.unity-builder-notification-entry__message-container {
    flex-grow: 1;
}

.unity-builder-notification-entry__message {
    overflow: hidden;
}

.unity-builder-notification-entry__details-button {
    background-color: initial;
    border-color: initial;
    border-bottom-width: 1px;
    border-radius: initial;
    margin: 0;
    padding: 0;
    height: 12px;
}

.unity-builder-notification-entry__dismiss-button {
    background-color: initial;
    border-color: initial;
    margin: 2px;
    width: 16px;
    height: 16px;
    border-radius: 0;
}

/*****************************************************************************/
/* Viewport                                                                  */
/*****************************************************************************/

.unity-builder-viewport {
    flex-grow: 1;
    flex-shrink: 0;
}

.unity-builder-viewport__viewport-wrapper {
    flex-grow: 1;
    flex-shrink: 0;
    border-width: 0;
    overflow: hidden;
    border-width: 4px;
    border-color: initial;
}

.unity-builder-viewport__viewport {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 0;
    flex-direction: column;
    align-content: center;
    align-items: flex-start;
}

.unity-builder-viewport__viewport.unity-builder-viewport--preview {
    overflow: hidden;
}


.unity-builder-viewport__viewport-surface {
    position: absolute;
}

.unity-builder-viewport__canvas {
    flex-shrink: 0;
}

.unity-builder-viewport__canvas-layer {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.unity-builder-viewport__checkerboard-background {
    --odd-cell-color: #808080;
    --even-cell-color: #8c8c8c;
    --cell-size: 8.0;
}

.unity-builder-viewport__checkerboard-background-container {
    overflow: hidden;
}

.unity-builder-viewport__shared-styles-and-document {
    border-left-width: 4px;
    border-right-width: 4px;
    border-bottom-width: 4px;
    margin-right: -4px;
    margin-left: -4px;
    margin-bottom: -4px;
}

.unity-builder-viewport__shared-styles {
    display: none;
}

.unity-builder-viewport__pick-overlay.unity-builder-viewport--preview {
    display: none;
}

.unity-builder-viewport__fit-canvas-button {
    position: absolute;
    right: 5px;
    bottom: 5px;
    display: none; /* Starts hidden. */
}

/*****************************************************************************/
/* Builder Canvas                                                            */
/*****************************************************************************/

.unity-builder-canvas__container {
    flex-grow: 1;
}

.unity-builder-canvas__container-wrapper {
    flex-grow: 1;
}

.unity-builder-canvas__header {
    margin-left: -4px;
    margin-right: -4px;
    flex-direction: row;
    overflow: hidden;
}

.unity-builder-canvas__title {
    margin-left: 4px;
    margin-top: 2px;
    margin-bottom: 2px;
}

.unity-builder-canvas__handle {
    position: absolute;
}

.unity-builder-canvas__corner {
    width: 24px;
    height: 24px;
}

.unity-builder-canvas__side--horizontal {
    height: 18px;
    cursor: resize-vertical;
    flex-direction: row;
}

.unity-builder-canvas__side--vertical {
    width: 18px;
    cursor: resize-horizontal;
    flex-direction: column;
}

.unity-builder-canvas__side--top {
    top: -22px; /* -4 from the .unity-builder-viewport__shared-styles-and-document margin: -4px; */
    left: 0;
    right: 0;
}

.unity-builder-canvas__side--left {
    top: 0;
    left: -22px; /* -4 from the .unity-builder-viewport__shared-styles-and-document margin: -4px; */
    bottom: 0;
}

.unity-builder-canvas__side--bottom {
    left: 0;
    right: 0;
    bottom: -22px; /* -4 from the .unity-builder-viewport__shared-styles-and-document margin: -4px; */
}

.unity-builder-canvas__side--right {
    top: 0;
    right: -22px; /* -4 from the .unity-builder-viewport__shared-styles-and-document margin: -4px; */
    bottom: 0;
}

.unity-builder-canvas__corner--top-left {
    top: -28px; /* -4 from the .unity-builder-viewport__shared-styles-and-document margin: -4px; */
    left: -28px; /* -4 from the .unity-builder-viewport__shared-styles-and-document margin: -4px; */
    cursor: resize-up-left;
}

.unity-builder-canvas__corner--top-right {
    top: -28px; /* -4 from the .unity-builder-viewport__shared-styles-and-document margin: -4px; */
    right: -28px; /* -4 from the .unity-builder-viewport__shared-styles-and-document margin: -4px; */
    cursor: resize-up-right;
}

.unity-builder-canvas__corner--bottom-left {
    bottom: -28px; /* -4 from the .unity-builder-viewport__shared-styles-and-document margin: -4px; */
    left: -28px; /* -4 from the .unity-builder-viewport__shared-styles-and-document margin: -4px; */
    cursor: resize-up-right;
}

.unity-builder-canvas__corner--bottom-right {
    bottom: -28px; /* -4 from the .unity-builder-viewport__shared-styles-and-document margin: -4px; */
    right: -28px; /* -4 from the .unity-builder-viewport__shared-styles-and-document margin: -4px; */
    cursor: resize-up-left;
}

.unity-builder-canvas__side__inner {
    position: absolute;
}

.unity-builder-canvas__side--top .unity-builder-canvas__side__inner {
    height: 4px;
    left: 0;
    right: 0;
    bottom: 0;
}

.unity-builder-canvas__side--left .unity-builder-canvas__side__inner {
    width: 4px;
    top: 0;
    bottom: 0;
    right: 0;
}

.unity-builder-canvas__side--bottom .unity-builder-canvas__side__inner {
    height: 4px;
    left: 0;
    right: 0;
    top: 0;
}

.unity-builder-canvas__side--right .unity-builder-canvas__side__inner {
    width: 4px;
    top: 0;
    bottom: 0;
    left: 0;
}

.unity-builder-canvas__corner__inner {
    position: absolute;
    width: 12px;
    height: 12px;
}

.unity-builder-canvas__corner--top-left .unity-builder-canvas__corner__inner {
    right: 0;
    bottom: 0;
}

.unity-builder-canvas__corner--top-right .unity-builder-canvas__corner__inner {
    left: 0;
    bottom: 0;
}

.unity-builder-canvas__corner--bottom-left .unity-builder-canvas__corner__inner {
    right: 0;
    top: 0;
}

.unity-builder-canvas__corner--bottom-right .unity-builder-canvas__corner__inner {
    left: 0;
    top: 0;
}

.unity-builder-canvas__cursor-setter {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}

.unity-builder-canvas__side--horizontal .unity-builder-canvas__cursor-setter {
    cursor: resize-vertical;
}

.unity-builder-canvas__side--vertical .unity-builder-canvas__cursor-setter {
    cursor: resize-horizontal;
}

.unity-builder-canvas__corner--top-left .unity-builder-canvas__cursor-setter {
    cursor: resize-up-left;
}

.unity-builder-canvas__corner--top-right .unity-builder-canvas__cursor-setter {
    cursor: resize-up-right;
}

.unity-builder-canvas__corner--bottom-left .unity-builder-canvas__cursor-setter {
    cursor: resize-up-right;
}

.unity-builder-canvas__corner--bottom-right .unity-builder-canvas__cursor-setter {
    cursor: resize-up-left;
}

.unity-builder-canvas__drag-hover-cover-layer {
    display: none;
    position: absolute;
    top: -20px;
    left: -20px;
    bottom: -20px;
    right: -20px;
}

.unity-builder-viewport__canvas-layer.unity-builder-canvas__container--dark,
.unity-builder-tooltip-preview.unity-builder-canvas__container--dark {
    color: #D9D9D9;
    background-color: rgb(56, 56, 56);
}

.unity-builder-viewport__canvas-layer.unity-builder-canvas__container--light,
.unity-builder-tooltip-preview.unity-builder-canvas__container--light {
    color: #000;
    background-color: rgb(182, 182, 182);
}

.unity-builder-canvas__container--runtime {
    color: #000;
    background-color: rgb(40, 61, 75);
}

.unity-builder-canvas__special-visual-element-initial-size {
    min-width: 100px;
    min-height: 100px;
    border-width: 1px;
    flex-grow: 1;
}

.unity-builder-viewport__text-editor-container {
    position: absolute;
}

.unity-builder-viewport__text-editor {
    margin: 0;
    padding: 0;
}

.unity-builder-viewport__text-editor .unity-base-text-field__input  {
    margin: 0;
    padding: 0;
}

/*****************************************************************************/
/* Snippet Content                                                           */
/*****************************************************************************/

.unity-builder-code-preview {
    flex-grow: 1;
}

.unity-builder-code__scroll-view {
    flex-grow: 1;
    flex-shrink: 0;
}

.unity-builder-code__title {
    -unity-font-style: bold;
    margin-top: 8px;
}

.unity-builder-code__code {
    height: auto;
}

.unity-builder-code__code-text {
    border-width: 1px;
    padding: 4px;
}

.unity-builder-code__code-line-numbers {
    min-width: 30px;
    -unity-text-align: upper-right;
    -unity-font: resource("Consola");
    font-size: 13px;
    padding: 6px;
}

.unity-builder-code__code_outer_container {
    flex-direction: row;
}

.unity-builder-code__code_container {
    flex-direction: row;
    overflow: hidden;
}

.unity-base-text-field .unity-builder-code__input {
    -unity-font: resource("Consola");
    font-size: 13px;
    background-image: none;
    border-color: initial;
}

.unity-base-text-field .unity-builder-code__input:active,
.unity-base-text-field .unity-builder-code__input:hover,
.unity-base-text-field .unity-builder-code__input:focus {
    background-image: none;
    border-color: initial;
}

.unity-builder-code__open-source-file-button {
    background-color: initial;
    border-radius: 0;
    border-width: 0;
    width: 15px;
    height: 15px;
}

/*****************************************************************************/
/* Builder Label Pill                                                        */
/*****************************************************************************/

.unity-builder-tag-pill {
    margin-right: 10px;
    border-radius: 5px;
    border-width: 1px;
    height: 12px;
    font-size: 9px;
    align-self: center;
    padding-left: 5px;
    padding-right: 5px;
    -unity-text-align: middle-left;
}

/*****************************************************************************/
/* Builder Class Pill                                                        */
/*****************************************************************************/

.unity-builder-class-pill {
    flex-direction: row;
    margin: 2px;
    flex-shrink: 0;
    border-radius: 4px;
    padding-left: 4px;
    padding-right: 4px;
    overflow: hidden;
}

.unity-builder-class-pill Label {
    max-width: 200px;
    overflow: hidden;
    -unity-text-align: middle-left;
    padding-top: 2px;
    padding-bottom: 2px;
}

.unity-builder-class-pill__delete-button {
    height: 16px;
    margin-right: 0;
    margin-bottom: 0;
    margin-top: 0;
    padding-bottom: 0;
    -unity-text-align: middle-center;
}

.unity-builder-class-pill__delete-button,
.unity-builder-class-pill__delete-button:active,
.unity-builder-class-pill__delete-button:hover,
.unity-builder-class-pill__delete-button:focus {
    background-image: none;
    background-color: initial;
    border-color: initial;
}

.unity-debugger-tree-item-pill.unity-builder-class-pill {
    margin-top: 1px;
    margin-bottom: 1px;
    padding-top: 0;
    padding-bottom: 0;
}

.unity-builder-class-pill--draggable .unity-builder-class-pill__delete-button,
.unity-debugger-tree-item-pill.unity-builder-class-pill .unity-builder-class-pill__delete-button {
    display: none;
}

/*****************************************************************************/
/* Dragger                                                                   */
/*****************************************************************************/

.unity-builder-dragger-preview {
    display: none;
    position: absolute;
}

.unity-builder-dragger-preview.unity-builder-dragger-preview--dragged {
    display: flex;
}

/*****************************************************************************/
/* Toolbar                                                                   */
/*****************************************************************************/

.unity-builder-toolbar * {
    flex-shrink: 0;
}

.unity-builder__toolbar-flex-space {
    flex-grow: 1;
}

.unity-builder__theme-toolbar-menu {
    width: 120px;
    padding-top: 2px;
}

.unity-builder__zoom-toolbar-menu {
    min-width: 60px;
}

.unity-builder-toolbar > .unity-toolbar-button {
    padding-top: 3px;
}

/*****************************************************************************/
/* Save Dialog                                                               */
/*****************************************************************************/

.unity-builder__save-dialog-gutter {
    flex-direction: row;
    align-self: flex-end;
}

.unity-builder__save-dialog-validation-container {
    height: 40px;
}

.unity-builder__save-dialog-path-field-container {
    flex-grow: 1;
}

.unity-builder__save-dialog-container .unity-text-field {
    flex-grow: 1;
}

.unity-builder__save-dialog-container .unity-button {
    padding-left: 3px;
}

.unity-builder__save-dialog-container .unity-text-field .unity-base-field__label {
    width: 50px;
    min-width: 50px;
}

.unity-builder__save-dialog-path-field {
    flex-direction: row;
    margin-bottom: 10px;
}

/*****************************************************************************/
/* Document Preview Window                                                   */
/*****************************************************************************/

.unity-builder-preview__uxml-asset-field {
    margin: 2px;
    flex-direction: column;
    height: 34px;
}

.unity-builder-preview__container {
    border-top-width: 2px;
    margin-top: 2px;
}

/*****************************************************************************/
/* Builder Tracker                                                           */
/*****************************************************************************/

.unity-builder-tracker {
    position: absolute;
    display: none;
}

.unity-builder-tracker--active {
    display: flex;
}

/*****************************************************************************/
/* Builder Parent Tracker                                                    */
/*****************************************************************************/

.unity-builder-parent-tracker {
    border-width: 2px;
}

/*****************************************************************************/
/* Builder Placement Indicator                                               */
/*****************************************************************************/

.unity-builder-placement-indicator {
    position: absolute;
}

.unity-builder-placement-indicator__indicator {
    flex-grow: 1;
}

/*****************************************************************************/
/* Builder Selection Indicator                                               */
/*****************************************************************************/

.unity-builder-selection-indicator {
    border-width: 2px;
}

.unity-builder-selection-indicator__header {
    position: absolute;
    height: 20px;
    margin-top: -22px;
    margin-left: -2px;
    padding: 0 2px;
    flex-direction: row;
    align-items: center;
}

.unity-builder-selection-indicator__header-container {
    flex-direction: row;
}

.unity-builder-selection-indicator__header-label {
    color: rgb(255, 255, 255);
}

/*****************************************************************************/
/* Builder Transformer                                                       */
/*****************************************************************************/

.unity-builder-transformer {
    position: absolute;
}

.unity-builder-transformer__drag-hover-cover-layer {
    display: none;
    position: absolute;
    top: -20px;
    left: -20px;
    bottom: -20px;
    right: -20px;
}

/*****************************************************************************/
/* Builder Mover                                                             */
/*****************************************************************************/

.unity-builder-mover {
    position: absolute;
    cursor: move-arrow;
}

/*****************************************************************************/
/* Builder Resizer                                                           */
/*****************************************************************************/

.unity-builder-resizer {
    position: absolute;
}

.unity-builder-resizer__corner {
    width: 18px;
    height: 18px;
}

.unity-builder-resizer__side--horizontal {
    height: 12px;
    cursor: resize-vertical;
    flex-direction: row;
}

.unity-builder-resizer__side--vertical {
    width: 12px;
    cursor: resize-horizontal;
    flex-direction: column;
}

.unity-builder-resizer__side--top {
    top: -12px;
    left: 0;
    right: 0;
}

.unity-builder-resizer__side--left {
    top: 0;
    left: -12px;
    bottom: 0;
}

.unity-builder-resizer__side--bottom {
    left: 0;
    right: 0;
    bottom: -12px;
}

.unity-builder-resizer__side--right {
    top: 0;
    right: -12px;
    bottom: 0;
}

.unity-builder-resizer__corner--top-left {
    top: -18px;
    left: -18px;
    cursor: resize-up-left;
}

.unity-builder-resizer__corner--top-right {
    top: -18px;
    right: -18px;
    cursor: resize-up-right;
}

.unity-builder-resizer__corner--bottom-left {
    bottom: -18px;
    left: -18px;
    cursor: resize-up-right;
}

.unity-builder-resizer__corner--bottom-right {
    bottom: -18px;
    right: -18px;
    cursor: resize-up-left;
}

.unity-builder-resizer__side__inner {
    position: absolute;
}

.unity-builder-resizer__side--top .unity-builder-resizer__side__inner {
    height: 2px;
    left: 0;
    right: 0;
    bottom: 0;
}

.unity-builder-resizer__side--left .unity-builder-resizer__side__inner {
    width: 2px;
    top: 0;
    bottom: 0;
    right: 0;
}

.unity-builder-resizer__side--bottom .unity-builder-resizer__side__inner {
    height: 2px;
    left: 0;
    right: 0;
    top: 0;
}

.unity-builder-resizer__side--right .unity-builder-resizer__side__inner {
    width: 2px;
    top: 0;
    bottom: 0;
    left: 0;
}

.unity-builder-resizer__corner__inner {
    position: absolute;
    width: 6px;
    height: 6px;
}

.unity-builder-resizer__corner--top-left .unity-builder-resizer__corner__inner {
    right: 0;
    bottom: 0;
}

.unity-builder-resizer__corner--top-right .unity-builder-resizer__corner__inner {
    left: 0;
    bottom: 0;
}

.unity-builder-resizer__corner--bottom-left .unity-builder-resizer__corner__inner {
    right: 0;
    top: 0;
}

.unity-builder-resizer__corner--bottom-right .unity-builder-resizer__corner__inner {
    left: 0;
    top: 0;
}

.unity-builder-resizer__cursor-setter {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}

.unity-builder-resizer__side--horizontal .unity-builder-resizer__cursor-setter {
    cursor: resize-vertical;
}

.unity-builder-resizer__side--vertical .unity-builder-resizer__cursor-setter {
    cursor: resize-horizontal;
}

.unity-builder-resizer__corner--top-left .unity-builder-resizer__cursor-setter {
    cursor: resize-up-left;
}

.unity-builder-resizer__corner--top-right .unity-builder-resizer__cursor-setter {
    cursor: resize-up-right;
}

.unity-builder-resizer__corner--bottom-left .unity-builder-resizer__cursor-setter {
    cursor: resize-up-right;
}

.unity-builder-resizer__corner--bottom-right .unity-builder-resizer__cursor-setter {
    cursor: resize-up-left;
}

/*****************************************************************************/
/* Builder Anchorer                                                          */
/*****************************************************************************/

.unity-builder-anchorer {
    position: absolute;
    align-content: center;
    align-items: center;
    justify-content: center;
}

.unity-builder-anchorer__hover-zone {
    width: 12px;
    height: 12px;
    align-content: center;
    align-items: center;
    justify-content: center;
}

.unity-builder-anchorer__inner {
    width: 5px;
    height: 5px;
    border-width: 1px;
}

.unity-builder-anchorer--top {
    top: -34px;
    left: 0;
    right: 0;
}

.unity-builder-anchorer--left {
    top: 0;
    left: -34px;
    bottom: 0;
}

.unity-builder-anchorer--bottom {
    left: 0;
    right: 0;
    bottom: -34px;
}

.unity-builder-anchorer--right {
    top: 0;
    right: -34px;
    bottom: 0;
}

/*****************************************************************************/
/* Builder Dragger                                                           */
/*****************************************************************************/

.unity-builder-dragger__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.unity-builder-dragger__container {
    position: absolute;
}

.unity-builder-dragger__empty-vs {
    border-width: 1px;
    width: 100px;
    height: 100px;
}

.unity-builder-dragger__drag-preview {
    opacity: 0.5;
}

.unity-builder-dragger--being-dragged {
    min-width: 100px;
    min-height: 20px;
}

.unity-builder-dragger--being-dragged.unity-button {
    width: 100px;
}

.unity-builder-dragger--being-dragged.unity-base-field {
    width: 150px;
}

.unity-builder-dragger--being-dragged > .unity-base-field__label {
    min-width: 0;
    width: 90px;
}

.unity-builder-dragger--being-dragged .unity-composite-field__label {
    display: none;
}

/*****************************************************************************/
/* Style Field Popup                                                         */
/*****************************************************************************/

.unity-style-field-popup {
    position: absolute;
    border-width: 1px;
    min-width: 250px;
    max-width: 400px;
    min-height: 20px;
    max-height: 250px;
    overflow: hidden;
}

.unity-style-field-popup * {
    flex-shrink: 0;
}

.unity-style-field-popup .unity-scroll-view__content-viewport {
    flex-shrink: 1;
}

/*****************************************************************************/
/* Tooltip Preview                                                           */
/*****************************************************************************/

.unity-builder-tooltip-preview {
    position: absolute;
    margin-top: 1px;
}

.unity-builder-tooltip-preview__enabler {
    display: none;
    border-width: 1px;
}

.unity-builder-tooltip-preview__container {
    overflow: hidden;
    min-width: 250px;
    max-width: 400px;
    min-height: 20px;
    max-height: 250px;
    padding: 8px;
}

.unity-builder-tooltip-preview * {
    flex-shrink: 0;
}

.unity-builder-tooltip-preview .unity-scroll-view__content-viewport {
    flex-shrink: 1;
}

.unity-builder-tooltip-preview .unity-base-field__label {
    min-width: 0;
    width: 100px;
}

.unity-builder-tooltip-preview .unity-composite-field__label {
    display: none;
}

/*****************************************************************************/
/* Variable Field                                                            */
/*****************************************************************************/

.unity-builder-variable-field .unity-text-field {
    margin: 0;
}

/*****************************************************************************/
/* Variable Info Tooltip                                                     */
/*****************************************************************************/

.unity-builder-inspector__varinfo-tooltip {
    align-content: center;
    -unity-text-align: middle-left;
}

.unity-builder-inspector__varinfo-tooltip .unity-builder-tooltip-preview__container {
    flex-grow: 1;
    padding: 0;
}

.unity-builder-inspector__varinfo-tooltip__warning {
    flex-direction: row;
    margin-top: 10px;
}

.unity-builder-inspector__varinfo-tooltip__warning Image {
    width: 16px;
    height: 16px;
}

/*****************************************************************************/
/* Variable Info View                                                        */
/*****************************************************************************/

.unity-builder-inspector__varinfo-view {
    padding: 4px;
}

.unity-builder-inspector__varinfo-view #top-section {
    flex-direction: row;
    align-items: center;
    flex-grow: 0;
    flex-shrink: 0;
}

.unity-builder-inspector__varinfo-view__row {
    flex-direction: row;
}

.unity-builder-inspector__varinfo-view__label {
    min-width: 80px;
    min-height: 16px;
   -unity-text-align: middle-left;
}

.unity-builder-inspector__varinfo-view__data-label {
    flex-grow: 1;
    flex-shrink: 1;
    overflow: hidden;
    white-space: nowrap;
}

.unity-builder-inspector__varinfo-view #name-value-container {
   flex-grow: 1;
   flex-shrink: 1;
}

.unity-builder-inspector__varinfo-view #name-label {
    -unity-text-align: middle-left;
}

.unity-builder-inspector__varinfo-view #description-container {
    margin-top: 8px;
    flex-grow: 1;
}

.unity-builder-inspector__varinfo-view #stylesheet-label {
    flex-grow: 1;
}

.unity-builder-inspector__varinfo-view #description-label {
    flex-grow: 1;
    flex-wrap: nowrap;
    overflow: hidden;
    white-space: normal;
    min-height: 16px;
}

.unity-builder-inspector__varinfo-view__value-preview-container {
    flex-direction: row;
    flex-grow: 1;
    flex-shrink: 1;
}

.unity-builder-inspector__varinfo-view__value-preview-container #preview {
    width: 16px;
    height: 16px;
    min-width: 16px;
    min-height: 16px;
    flex-shrink: 1;
    flex-grow: 0;
    margin-right: 4px;
    align-content: center;
    align-items: center;
    justify-content: center;
}

.unity-builder-inspector__varinfo-view__value-preview-container--thumbnail {
    flex-direction: column;
}

.unity-builder-inspector__varinfo-view__value-preview-container--thumbnail #preview {
    width: 50px;
    height: 50px;
    min-width: 50px;
    min-height: 50px;
    border-width: 1px;
    border-color: black;
}

.unity-builder-inspector__varinfo-view__value-preview-container #thumbnail {
    max-width: 48px;
    max-height: 48px;
    --unity-image-size: scale-to-fit;
}

/*****************************************************************************/
/* Field Search Completer Popup                                              */
/*****************************************************************************/

.unity-field-search-completer-popup {
    flex-grow: 1;
    max-height: 400px;
    max-width: 1000px;
}

.unity-field-search-completer-popup .unity-list-view {
    flex: 1 0 0;
}

.unity-field-search-completer-popup__item {
    flex-direction: row;
}

.unity-field-search-completer-popup__item__name-label {
    -unity-text-align: middle-left;
    overflow: hidden;
    flex: 1 0 0;
    margin-left: 4px;
    margin-right: 4px;
    overflow: hidden;
    white-space: nowrap;
}

.unity-field-search-completer-popup .unity-list-view .unity-builder-tag-pill {
    height: 16px;
}

.unity-field-search-completer-popup__result-label {
    padding: 2px;
    -unity-text-align: middle-center;
}

.unity-field-search-completer-popup .unity-builder-inspector__varinfo-view {
    border-top-width: 1px;
}

.unity-field-search-completer-popup #previewContainer {
    border-width: 1px;
}

/*****************************************************************************/
/* Code                                                                      */
/*****************************************************************************/

.unity-builder-code-row {
    flex-direction: row;
    flex-wrap: wrap;
}

.unity-builder-code-row--padded {
    margin-top: 10px;
}

.unity-builder-inspector__selector-example {
    padding: 10px;
}

.unity-builder-code-label {
    padding: 0;
    white-space: normal;
}

.unity-builder-code-label--code {
    margin-top: 4px;
    padding: 0;
    -unity-font: resource("Consola");
    font-size: 13px;
}
