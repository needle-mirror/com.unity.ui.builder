<UXML xmlns="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xmlns:uib="Unity.UI.Builder">
    <VisualElement name="header-container" class="unity-builder-canvas__header">
        <Label name="title" class="unity-builder-pane__sub-title unity-builder-canvas__title" />
        <Label name="tag" text="Editor Mode" class="unity-builder-pane__sub-title unity-builder-canvas__title unity-builder-tag-pill" />
    </VisualElement>

    <VisualElement name="content-container-wrapper" class="unity-builder-canvas__container-wrapper">
        <VisualElement name="checkerboard-background-container" class="unity-builder-viewport__canvas-layer unity-builder-viewport__checkerboard-background-container" >
            <uib:CheckerboardBackground name="checkerboard-background-element" class="unity-builder-viewport__checkerboard-background" />
        </VisualElement>
        <VisualElement name="default-background-element" class="unity-builder-viewport__canvas-layer" />
        <VisualElement name="custom-background-element" class="unity-builder-viewport__canvas-layer" />

        <VisualElement name="content-container" class="unity-builder-canvas__container" />
    </VisualElement>

    <VisualElement name="left-handle" class="unity-builder-canvas__handle unity-builder-canvas__side unity-builder-canvas__side--vertical unity-builder-canvas__side--left">
        <VisualElement class="unity-builder-canvas__side__inner" picking-mode="ignore" />
        <VisualElement class="unity-builder-canvas__cursor-setter" />
    </VisualElement>
    <VisualElement name="bottom-handle" class="unity-builder-canvas__handle unity-builder-canvas__side unity-builder-canvas__side--horizontal unity-builder-canvas__side--bottom">
        <VisualElement class="unity-builder-canvas__side__inner" picking-mode="ignore" />
        <VisualElement class="unity-builder-canvas__cursor-setter" />
    </VisualElement>
    <VisualElement name="right-handle" class="unity-builder-canvas__handle unity-builder-canvas__side unity-builder-canvas__side--vertical unity-builder-canvas__side--right">
        <VisualElement class="unity-builder-canvas__side__inner" picking-mode="ignore" />
        <VisualElement class="unity-builder-canvas__cursor-setter" />
    </VisualElement>
     <VisualElement name="top-handle" class="unity-builder-canvas__handle unity-builder-canvas__side unity-builder-canvas__side--horizontal unity-builder-canvas__side--top">
        <VisualElement class="unity-builder-canvas__side__inner" picking-mode="ignore" />
        <VisualElement class="unity-builder-canvas__cursor-setter" />
    </VisualElement>

    <VisualElement name="top-left-handle" class="unity-builder-canvas__handle unity-builder-canvas__corner unity-builder-canvas__corner--top-left">
        <VisualElement class="unity-builder-canvas__corner__inner" picking-mode="ignore" />
        <VisualElement class="unity-builder-canvas__cursor-setter" />
    </VisualElement>
    <VisualElement name="top-right-handle" class="unity-builder-canvas__handle unity-builder-canvas__corner unity-builder-canvas__corner--top-right">
        <VisualElement class="unity-builder-canvas__corner__inner" picking-mode="ignore" />
        <VisualElement class="unity-builder-canvas__cursor-setter" />
    </VisualElement>
    <VisualElement name="bottom-left-handle" class="unity-builder-canvas__handle unity-builder-canvas__corner unity-builder-canvas__corner--bottom-left">
        <VisualElement class="unity-builder-canvas__corner__inner" picking-mode="ignore" />
        <VisualElement class="unity-builder-canvas__cursor-setter" />
    </VisualElement>
    <VisualElement name="bottom-right-handle" class="unity-builder-canvas__handle unity-builder-canvas__corner unity-builder-canvas__corner--bottom-right">
        <VisualElement class="unity-builder-canvas__corner__inner" picking-mode="ignore" />
        <VisualElement class="unity-builder-canvas__cursor-setter" />
    </VisualElement>

    <VisualElement name="drag-hover-cover-layer" class="unity-builder-canvas__drag-hover-cover-layer" />
</UXML>
